 queryAll:
    SELECT * FROM command ORDER BY id ASC;

 queryByKeywords:
    SELECT * FROM command
    WHERE  name LIKE ('%' || :name || '%')
    OR description LIKE ('%' || :description || '%')
    OR arguments LIKE ('%' || :arguments || '%')
    OR keywords LIKE ('%' || :keywords || '%');

 insert:
    INSERT INTO command(name, description, arguments, keywords)
    VALUES(?, ?, ?, ?);

 update:
    UPDATE command
    SET name = ?, description = ?, arguments = ?, keywords = ?
    WHERE id = ?;

 delete:
    DELETE FROM command
    WHERE id = ?;